

<div class="row top-row-main">
  <div class="col-xs-12 col-md-6 col-md-offset-3 bg">
    <div class="main-box">
      <h1 class="campy">Shorten 'yo URL'z</h1>
      <p>Paste a URL in the box below to make it nice'n short</p>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3 bg">
    <div class="main-box">
      <%= form_tag :shorten, method: 'get', id: 'shorten-form', class: 'inline-form' do %>
      <div class="form-group col-md-10">
        <label class="sr-only" for="exampleInputEmail2">URL</label>
        <input type="text" class="form-control" id="url" placeholder="url" name="u"/>
      </div>
      <button type="submit" class="btn btn-default">Shorten</button>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <%- if(@sls && @sls.count > 0) %>
    <table class="table">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Long URL</th>
          <th>Created</th>
          <th>Short URL</th>
          <th class="text-center">Clicks</th>
        </tr>
      </thead>
      <tbody>
      <%- @sls.each do |sl| %>
        <tr>
          <td><input type="checkbox" class="f" /></td>
          <td><%= link_to sl.link, sl.link %></td>
          <td><%= sl.created_at.to_formatted_s(:short) %></td>
          <td><%= build_sl_link( sl.short_id ) %></td>
          <td class="text-center"><%= sl.clicks.to_i %></td>
        </tr>
      <%- end %>
      </tbody>
    </table>
    <%- end %>
  </div>
</div>